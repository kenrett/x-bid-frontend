{
  "name": "x-bid-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:main": "vite --host main.lvh.me --port 5173",
    "dev:afterdark": "vite --host afterdark.lvh.me --port 5173",
    "dev:marketplace": "vite --host marketplace.lvh.me --port 5175",
    "build": "tsc -b && vite build",
    "build:analyze": "ANALYZE=true tsc -b && BUNDLE_ANALYZE_OUT=docs/bundle/stats.json vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "gen:api-types": "node scripts/gen-api-types.mjs --out src/api/openapi-types.ts",
    "check:api-types": "node scripts/check-api-types.mjs",
    "check:contrast": "node scripts/check-contrast.mjs",
    "openapi:types": "node scripts/openapi-types.mjs",
    "ct-2": "node scripts/ct-2.mjs",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:prod-smoke": "playwright test --config=playwright.prod-smoke.config.ts",
    "test:e2e:prod-smoke:fast": "PROD_SMOKE_PRESET=fast playwright test --config=playwright.prod-smoke.config.ts",
    "test:e2e:prod-smoke:standard": "PROD_SMOKE_PRESET=standard playwright test --config=playwright.prod-smoke.config.ts",
    "test:e2e:prod-smoke:deep": "PROD_SMOKE_PRESET=deep playwright test --config=playwright.prod-smoke.config.ts",
    "test:e2e:mutating-smoke": "playwright test --config=playwright.mutating-smoke.config.ts",
    "test:e2e:mutating-smoke:fast": "MUTATING_SMOKE_PRESET=fast playwright test --config=playwright.mutating-smoke.config.ts",
    "test:e2e:mutating-smoke:standard": "MUTATING_SMOKE_PRESET=standard playwright test --config=playwright.mutating-smoke.config.ts",
    "test:e2e:mutating-smoke:deep": "MUTATING_SMOKE_PRESET=deep playwright test --config=playwright.mutating-smoke.config.ts",
    "test:e2e:mutating-smoke:prod": "MUTATING_SMOKE_ALLOW_PROD=true playwright test --config=playwright.mutating-smoke.config.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@rails/actioncable": "^8.0.300",
    "@sentry/react": "^8.24.1",
    "@stripe/react-stripe-js": "^5.3.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "flowbite": "^3.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/rails__actioncable": "^6.1.11",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  }
}
